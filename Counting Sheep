static void Main(string[] args)
        {
            string asleep;
            int sheep;
            Console.WriteLine("Are you asleep yet? [y/n]");
            asleep = Console.ReadLine();

            while(asleep != "y")
            {
                sheep ++;
            }
            

            Console.WriteLine("You counted {0} sheep.", sheep);
            Console.ReadLine();
        }
